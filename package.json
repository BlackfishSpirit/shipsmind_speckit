{
  "name": "shipsmind-speckit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:full": "pnpm docker:dev && pnpm db:generate && pnpm db:push && pnpm dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "setup": "pnpm install && pnpm db:generate",
    "postinstall": "prisma generate",
    "specify": "python scripts/specify.py",
    "specify:init": "python scripts/specify.py init",
    "specify:check": "python scripts/specify.py check",
    "features:list": "python .feature-tracking/scripts/feature-manager.py list",
    "features:create": "python .feature-tracking/scripts/feature-manager.py create",
    "features:move": "python .feature-tracking/scripts/feature-manager.py move",
    "features:metrics": "python .feature-tracking/scripts/feature-manager.py metrics",
    "features:spec": "python .feature-tracking/scripts/spec-kit-integration.py create-from-spec"
  },
